<bindings xmlns="http://www.mozilla.org/xbl"
          xmlns:xbl="http://www.mozilla.org/xbl"
          xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
  <binding id="webapp" extends="chrome://global/content/bindings/richlistbox.xml#richlistitem">
    <content orient="horizontal">
      <xul:image class="webapp-icon" xbl:inherits="src=icon"/>
      <xul:vbox flex="1">
        <xul:label class="webapp-name" xbl:inherits="value=name" crop="end"/>
        <xul:label class="webapp-href" xbl:inherits="value=href" crop="end"/>
      </xul:vbox>
    </content>
  </binding>
</bindings>
